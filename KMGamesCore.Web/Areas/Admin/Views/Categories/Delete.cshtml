@using KMGamesCore.Models.Models
@model Category

@{
    ViewData["title"] = "Delete";
}

<div class="container justify-content-center w-50">
    <form method="post" asp-controller="Categories" asp-action="Delete">

        <input asp-for="CategoryId" type="hidden"/>
        <input asp-for="RowVersion" type="hidden" />

        <div class="shadow rounded-4 p-4">
            <h2>Delete Category</h2>
            <div class="form-group">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control w-50" readonly/>
            </div>
        </div>
        <div class="form-group d-flex justify-content-between mt-3">
            <button type="submit" class="btn btn-outline-primary w-25">
                <i class="bi bi-check2"></i>
            </button>
            <a asp-controller="Categories" asp-action="Index" class="btn btn-outline-danger w-25">
                <i class="bi bi-x-lg"></i>
            </a>
        </div>
    </form>
</div>