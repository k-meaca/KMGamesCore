@using KMGamesCore.Models.Models;
@model Game

@{
    ViewData["title"] = "Delete";
}

<div class="container-fluid justify-content-center w-75">
    
    <form method="post" asp-controller="Games" asp-action="Delete">

        <div class="shadow rounded-4 p-4">

            <div class="row">

                <div class="col-6">
                    <h2>Delete Game</h2>
                </div>

            </div>

            <input asp-for="GameId" type="hidden"/>

            <div class="row">

                <div class="col-6">

                    <div class="row d-flex align-content-center">
                        <div class="col-12 mt-2">
                            <label asp-for="Title" class="form-label"></label>
                            <input asp-for="Title" readonly class="form-control"/>
                        </div>

                        <div class="col-12 mt-2">
                            <label asp-for="ActualPrice" class="form-label"></label>
                            <input asp-for="ActualPrice" readonly class="form-control"/>
                        </div>

                    </div>

                </div>

                <div class="d-flex col-6 align-content-end">
                    @{
                        string path = @"\images\games\" + Model.Image;
                    }
                    <img src="@path" alt="Game's image goes here" class="img-fluid" />
                </div>
                

            </div>

            <div class="row mt-2">

                <div class="col-6">
                    <label asp-for="DeveloperId" class="form-label"></label>
                    <input asp-for="Developer.Name" readonly class="form-control"/>
                </div>

                <div class="col-6">
                    <label asp-for="Release" class="form-label"></label>
                    <input asp-for="Release" readonly class="form-control"/>
                </div>

            </div>
    
        </div>
        <div class="d-flex justify-content-between mt-4">

            <button type="submit" class="btn btn-outline-primary w-25">
                <i class="bi bi-check2"></i>
            </button>

            <a asp-controller="Games" asp-action="Index" class="btn btn-outline-danger w-25">
                <i class="bi bi-x-lg"></i>
            </a>

        </div>

    </form>


</div>