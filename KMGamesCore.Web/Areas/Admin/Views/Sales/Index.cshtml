@{
    ViewData["Title"] = "Sales";
}

<div class="container justify-content-center">
    <div class="text-start">
        <h2>Sales</h2>
    </div>
    <table class="table text-dark align-baseline" id="salesTable">
        <thead class="text-dark table-primary">
            <tr>
                <th>PayPalId</th>
                <th>Email</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Date</th>
                <th>Total</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody class="table-group-divider table-secondary align-content-end">
        </tbody>
    </table>
</div>

@section Scripts{
    <script src="~/js/salesTable.js"></script>
}