@using KMGamesCore.Models.Models

@model Country
@{
    ViewData["title"] = "Create";
}


<div class="container justify-content-center w-50 mt-5">
    <form method="post" asp-controller="Countries" asp-action="Create">
        <div class="shadow rounded-4 p-4">
            <h2>New Country</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="form-label"></label>
                <input type="text" asp-for="Name" class="form-control w-50"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="d-flex justify-content-between mt-5">
            <button type="submit" class="btn btn-outline-primary w-25">
                <i class="bi bi-check2"></i>
            </button>
            <a asp-controller="Countries" asp-action="Index" class="btn btn-outline-danger w-25">
                <i class="bi bi-x-lg"></i>
            </a>
        </div>
    </form>
</div>
@section Scripts {

    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }

}