@using KMGamesCore.Models.Models
@model City
@{
    ViewData["title"] = "Edit";
}

<div class="container justify-content-center w-50  mt-5">
    <form asp-controller="Cities" asp-action="Delete">
        <div class="shadow bg-body rounded-4 p-4">
            <h2 class="text-danger">Delete City</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">

                <input asp-for="CityId" type="hidden" />
                <input asp-for="CountryId" type="hidden"/>   
                <input asp-for="RowVersion" type="hidden" />

                <label asp-for="Name" class="form-label"></label>
                <input type="text" asp-for="Name" disabled class="form-control w-50 mb-3"/>

                <label asp-for="@Model.Country.Name" class="form-label"></label>
                <input type="text" asp-for="@Model.Country.Name" disabled class="form-control w-50" />
            </div>
        </div>
        <div class="d-flex justify-content-between mt-5">
            <button type="submit" class="btn btn-outline-primary w-25">
                <i class="bi bi-check2"></i>
            </button>
            <a asp-controller="Cities" asp-action="Index" class="btn btn-outline-danger w-25">
                <i class="bi bi-x-lg"></i>
            </a>
        </div>
    </form>
</div>
