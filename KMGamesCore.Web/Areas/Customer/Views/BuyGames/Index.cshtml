@using KMGamesCore.Web.ViewModel.BuyGameVm
@model GameIndexVm


@{
    ViewData["Title"] = "Buy Games";
}


<!--START GAMES-->

<div class="container-fluid justify-content-center pt-5">

    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-aera="Customer" asp-controller="Home" asp-action="Index">
                    Home
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                Buy Games
            </li>
        </ol>
    </nav>


    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4 mt-5">
        @if (string.IsNullOrEmpty(Model.Category))
        {
            <span class="bg-primary p-1">
                All the games        
            </span>
        }
        else
        {
            <span class="bg-primary p-1">
                @Model.Category
            </span>
        }
    </h2>
    <!-- Shop Product Start -->
    <div class="col-lg-12 col-md-12 justify-content-center">
        <div class="row justify-content-center pb-3">
