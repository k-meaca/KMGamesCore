<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KMGamesCore</title>
    <link rel="stylesheet" href="~/css/style.min.css"/>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-SuperHero.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KMGamesCore.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="//cdn.datatables.net/1.13.7/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="~/css/owl.carousel.min.css"/>
    <link rel="stylesheet" href="~/css/owl.theme.default.min.css"/>
</head>
<body >
    <header>
        <nav class="navbar navbar-dark navbar-expand-lg bg-primary mb-4" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="Customer" asp-controller="Home" asp-action="Index">KMGamesCore</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Customer" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Customer" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        @if(User.IsInRole("Admin")){
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-body" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Information</a>
                                <div class="dropdown-menu">
                                    <a class="nav-link" asp-area="Admin" asp-controller="Categories" asp-action="Index">Categories</a>
                                    <a class="nav-link" asp-area="Admin" asp-controller="Cities" asp-action="Index">Cities</a>
                                    <a class="nav-link" asp-area="Admin" asp-controller="Countries" asp-action="Index">Countries</a>
                                    <a class="nav-link" asp-area="Admin" asp-controller="Developers" asp-action="Index">Developers</a>
                                    <a class="nav-link" asp-area="Admin" asp-controller="Games" asp-action="Index">Games</a>
                                    <a class="nav-link" asp-area="Admin" asp-controller="PlayerTypes" asp-action="Index">Player Types</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="nav-link" asp-area="Admin" asp-controller="Sales" asp-action="Index">Sales</a>
                                </div>
                            </li>
                        }
                        else if (User.IsInRole("Customer"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Customer" asp-controller="PurchasedGames" asp-action="Index">My Games</a>
                            </li>
                            <partial name="_RenderNavCategories"></partial>

                        }
                        else
                        {
                            <partial name="_RenderNavCategories"></partial>
                        }
                    </ul>
                    <partial name="_RenderShoppingCart"></partial>
                    <partial name="_LoginPartial"></partial>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
            <partial name="_Notification"></partial>
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - KMGamesCore.Web - <a asp-area="Customer" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script src="//cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="~/js/showModal.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
