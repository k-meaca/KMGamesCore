        <li class="nav-item text-end">
            <a asp-area="Customer" asp-controller="BuyGames" asp-action="ShowCart" asp-route-userId="@User.Claims.First().Value" class="btn btn-secondary rounded-4">
                <i class="bi bi-bag"></i>
